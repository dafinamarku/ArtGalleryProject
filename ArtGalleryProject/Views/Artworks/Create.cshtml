@model ArtGalleryProject.Models.Artwork

@{
    ViewBag.Title = "Shto Veper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
  <br />
  <h2>Shto Veper</h2>

  @using (Html.BeginForm("Create", "Artworks", FormMethod.Post, new { enctype = "multipart/form-data"}))
  {
    @Html.AntiForgeryToken()
    <br />
    <div class="form">
      <hr />
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      <div class="form-row">
        <div class="form-group col-md-6">
          @Html.LabelFor(model => model.titulli, htmlAttributes: new { @class = "control-label col-md-2" })
          @Html.EditorFor(model => model.titulli, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.titulli, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
          @Html.LabelFor(model => model.fotoEmri, htmlAttributes: new { @class = "control-label col-md-2" }) <br />
           <input type="file" class="file-input" id="file" name="file">
            @Html.ValidationMessageFor(model => model.fotoEmri, "", new { @class = "text-danger" })
          </div>
        </div>

      <div class="form-row">
        <div class="form-group col-md-12">
          @Html.LabelFor(model => model.pershkrimi, htmlAttributes: new { @class = "control-label col-md-2" })
          @Html.TextAreaFor(model => model.pershkrimi, new { @class = "form-control" })
          @Html.ValidationMessageFor(model => model.pershkrimi, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-4">
          @Html.LabelFor(model => model.kategoriaVepra.kategoria, htmlAttributes: new { @class = "control-label col-md-2" })
          @Html.DropDownList("KategoriaId", null, htmlAttributes: new { @class = "form-control" })
          @Html.ValidationMessageFor(model => model.KategoriaId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-4">
          @Html.LabelFor(model => model.subjektiVepra.subjekti, htmlAttributes: new { @class = "control-label col-md-2" })
          @Html.DropDownList("SubjektiId", null, htmlAttributes: new { @class = "form-control" })
          @Html.ValidationMessageFor(model => model.SubjektiId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-4">
          @Html.LabelFor(model => model.stiliVepra.stiili, htmlAttributes: new { @class = "control-label col-md-2" })
          @Html.DropDownList("StiliId", null, htmlAttributes: new { @class = "form-control" })
          @Html.ValidationMessageFor(model => model.StiliId, "", new { @class = "text-danger" })
        </div>
      </div>
      <br />
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <input type="submit" value="+Shto Veper" class="btn btn-lg bg-danger text-white" />
        </div>
      </div>
    </div>
  }

</div>

